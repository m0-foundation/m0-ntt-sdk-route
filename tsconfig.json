{
    "include": [
        "src",
        "*.config.ts"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ],
    "compilerOptions": {
        "types": [
            "node"
        ],
        "target": "ES2020",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true
    }
}